<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Admin - Manage Users</title>
</head>
<body>
    <h1>Admin Panel - Manage Users</h1>

    <p>Logged in as <%= user.email %> (<%= user.admin ? "Admin" : "Member" %>)</p>
    <a href="/">Back to Home</a>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Member</th>
                <th>Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(u) { %>
                <tr>
                    <td><%= u.id %></td>
                    <td><%= u.first_name %> <%= u.last_name %></td>
                    <td><%= u.email %></td>
                    <td><%= u.member ? "Yes" : "No" %></td>
                    <td><%= u.admin ? "Yes" : "No" %></td>
                    <td>
                        <% if (!u.admin) { %>
                            <form action="/admin/users/promote/<%= u.id %>" method="post" style="display:inline;">
                                <button type="submit">Promote to Admin</button>
                            </form>
                        <% } else { %>
                            <em>Already Admin</em>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
